{
  "name": "react-native-customizable-image-crop-picker",
  "version": "0.1.0",
  "description": "Fully customizable React Native image crop picker (JS UI + native performance).",
  "license": "MIT",
  "author": "Your Name <you@example.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/react-native-customizable-image-crop-picker.git"
  },
  "homepage": "https://github.com/your-org/react-native-customizable-image-crop-picker#readme",
  "bugs": {
    "url": "https://github.com/your-org/react-native-customizable-image-crop-picker/issues"
  },
  "keywords": [
    "react-native",
    "image",
    "picker",
    "crop",
    "cropper",
    "camera",
    "gallery",
    "typescript"
  ],
  "sideEffects": false,
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "types": "dist/types/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "types": "./dist/types/index.d.ts",
      "import": "./dist/module/index.js",
      "require": "./dist/commonjs/index.js"
    }
  },
  "files": [
    "android",
    "assets",
    "ios",
    "src",
    "dist",
    "*.podspec",
    "react-native.config.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && bob build",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.72"
  },
  "peerDependenciesMeta": {
    "react-native-safe-area-context": {
      "optional": true
    },
    "react-native-svg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@react-native/babel-preset": "^0.84.0",
    "@react-native/eslint-config": "^0.84.0",
    "@react-native/typescript-config": "^0.84.0",
    "@types/react": "^19.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "react": "^19.2.0",
    "react-native": "^0.84.0",
    "react-native-builder-bob": "^0.40.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
