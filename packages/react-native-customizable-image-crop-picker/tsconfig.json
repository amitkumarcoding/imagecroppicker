{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist/types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "types": ["react", "react-native"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/node_modules", "dist", "android", "ios"]
}

